{{ form_start(registrationForm) }}
<div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm md:mx-auto sm:mx-0 my-40 flex-1 flex flex-col items-center justify-center px-2">
        <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
            <h1 class ="mb-8 text-3xl text-center">Inscription</h1>
                {{ form_row(registrationForm.email, {'attr' : {'class' : "block border border-grey-light w-full p-3 rounded mb-4"}}) }}
                {{ form_row(registrationForm.firstName, {'attr' : {'class' : "block border border-grey-light w-full p-3 rounded mb-4"}}) }}
                {{ form_errors(registrationForm.firstName, {'attr' : {'class' : "error"}}) }}
                {{ form_row(registrationForm.lastName, {'attr' : {'class' : "block border border-grey-light w-full p-3 rounded mb-4"}}) }}
                {{ form_errors(registrationForm.lastName, {'attr' : {'class' : "error"}}) }}
                {{ form_row(registrationForm.password, {'attr' : {'class' : "block border border-grey-light w-full p-3 rounded mb-4"}}) }}  
            <button type="submit" class="w-full px-6 py-2 mb-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Créer un compte</button>
            <div class="text-center text-sm text-grey-dark mt-4">
                En cochant cette case, vous accepter nos terms.
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            </div>
            <div class="text-grey-dark mt-6">
                Vous avez déjà un compte ?
                <a class="text-blue-600 hover:underline" href="{{ path('security.login') }}">Se connecter</a>
            </div>
    </div>
</div>
{{ form_end(registrationForm) }}