{% extends "base.html.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="">
		<h1 class="text-5xl text-center mt-24 mb-8">{{ title }}</h1>
			<div>
				{% if app.request.attributes.get("_route") != 'post.user' %}
					<div class="flex mx-[10%] justify-center sticky top-24">
						{% include "components/_search_data.html.twig" with {
							form: form ?? null
						} only %}
					</div>
				{% endif %}
			</div>
			<div class="flex flex-wrap gap-4 justify-center" id="searchView">
				{% for post in posts %}
					{% include "components/_card.html.twig" with {post: post} only %}
				{% endfor %}
			</div>
			<div class="navigation flex justify-center mb-8">
				{{ knp_pagination_render(posts) }}
			</div>
	</div>
{% endblock %}
